    </script>
    
    <script type="text/javascript">
		  $(document).ready(function(){

		    $('.wysihtml5').each(function(i, elem) {
		      $(elem).wysihtml5({'toolbar': {'html': true}}, {useLineBreaks: false});
		    });
		  });
		</script> 
  </head>
  <body class="container">
    <%= render 'layouts/header' %>
    <div class="notices">
      <% if notice.present? %>
        <div class="alert alert-info col-md-12" data-dismiss="alert">
          <%= notice %>
        </div>
      <% end %>
      <% if alert.present? %>
        <div class="alert alert-danger col-md-12" data-dismiss="alert">
          <%= alert %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>