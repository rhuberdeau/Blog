<div id="breadcrumbs">
  <%= link_to "Tutorials", tutorials_path %>--<%= @tutorial.name %>	
</div>
<!-- AddThis Button BEGIN -->
<div class="addthis_toolbox addthis_default_style ">
<a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
<a class="addthis_button_tweet"></a>
<a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
<a class="addthis_counter addthis_pill_style"></a>
</div>
<script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=xa-4e97b72525b75e48"></script>
<!-- AddThis Button END -->
<div class = "tutorial">
  <div class="article-title">
    <h1> <%= @tutorial.name %> </h1>
  </div>

  <p id="notice"><%= notice %></p>

  <p>
    <%= raw @tutorial.summary %>
  </p>
    
  <div id="slideshow">
    <div id="slideshownav">
  	  <!--This is filled with the forward and backward links by jquery  -->
    </div>
    <div id="slidesContainer">
      <%= render @steps %>
    </div>
  </div>
</div>
