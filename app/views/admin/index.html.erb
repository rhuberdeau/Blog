<div id="admin_index" class="container">

  <h2>Unpublished Articles</h1>
   
  <table class="table table-bordered">
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>links</th>
    </tr>
   
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.summary %></td>
        <td>
          <%= link_to 'Show', article_path(article), html_options = {class: "btn btn-success"} %> 
          <%= link_to 'Edit', edit_article_path(article), html_options = {class: "btn btn-info"} %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= link_to 'Create new article', new_article_path, html_options = {class: "btn btn-lg btn-success"} %> 

  <h2>Recent Comments</h2>
  <table class="table table-bordered">
    <tr>
      <th>In</th>
      <th>By</th>
      <th>Created</th>
    </tr>
    
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.article.title %></td>  
        <td><%= comment.user.email %></td>
        <td><%= comment.created_at %></td>
      </tr>
    <% end %>
  </table>
</div>