= form_for(@article, html: {class: "form-horizontal"}) do |f|
  = render 'shared/error_messages', object: f.object
  .form-group
    = f.label :title, class: "col-sm-2 control-label"
    .col-sm-4
      = f.text_field :title, class: "form-control", placeholder: "Title"
  .form-group
    = f.label :summary, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_area :summary, class: "form-control", placeholder: "Summary", rows: 5
  .form-group.form-group-lg
    = f.label :body, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_area :body, class: "form-control wysihtml5", placeholder: "Body", rows: 30
  .form-group
    = f.label :tag_names, class: "col-sm-2 control-label"
    .col-sm-4
      = f.text_field :tag_names, class: "form-control", placeholder: "Tags"
  .form-group
    .col-sm-offset-2.col-sm-10
      .checkbox
        label
          input#article_published.checkbox[name="article[published]" type="checkbox" value="1"]
          |  Publish
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', class: "btn btn-default"
